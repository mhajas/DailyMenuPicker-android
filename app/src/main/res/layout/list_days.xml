<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/monday_name"
        android:textAlignment="center"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/day_view_monday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tuesday_name"
        android:textAlignment="center"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/day_view_tuesday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wednesday_name"
        android:textAlignment="center"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/day_view_wednesday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/thursday_name"
        android:textAlignment="center"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/day_view_thursday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/friday_name"
        android:textAlignment="center"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/day_view_friday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>