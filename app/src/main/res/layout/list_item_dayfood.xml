<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/card_background"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight=".80"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight=".75"
                android:id="@+id/dayfood_item_name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingRight="5dp"
                tools:text="Hovädzina na prírodno s knedľu"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:id="@+id/dayfood_item_price"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="150 czk"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight=".75"
                android:id="@+id/dayfood_soup"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="Prdelačka"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:id="@+id/dayfood_soup_price"
                android:textSize="12sp"
                tools:text="v cene"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight=".75"
                android:text="Hodnotenie"
                android:textSize="12sp"
                android:textStyle="italic"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight=".25"
                android:id="@+id/dayfood_evaluation"
                android:textSize="12sp"
                tools:text="v cene"
                />

        </LinearLayout>

    </LinearLayout>

    <CheckBox
        android:id="@+id/agenda_button"
        android:layout_width="0dp"
        android:layout_weight=".10"
        android:layout_height="match_parent"
        android:button="@drawable/selector"
        android:focusable="false"
        />
</LinearLayout>